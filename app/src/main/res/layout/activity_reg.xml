<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="0dp"
android:orientation="vertical"
android:fillViewport="false">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="#f9f6d8"
    tools:context="com.example.h224500.fitnessapp.RegActivity" >




    <EditText
        android:id="@+id/editText1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:singleLine="true"
        android:hint="Name*"
        android:maxLength="30"

        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ. "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Sex"
        android:textSize="17sp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"

        android:layout_below="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonGroup"

        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/radioButton"
            android:textSize="14sp"
            android:checked="false"
            android:ems="10"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/imageButton13"
            android:layout_toStartOf="@+id/imageButton13" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:ems="10"
            android:id="@+id/radioButton2"
            android:textSize="14sp"
            android:checked="false"

            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView" />
    </RadioGroup>



    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:singleLine="true"
        android:inputType="number"
        android:hint="Date of birth*"
        android:textSize="15sp"

        android:layout_below="@+id/radioButtonGroup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText17"

        android:inputType="date"
        android:hint="Age*"
        android:singleLine="true"
        android:textSize="15sp"
        android:focusable="true"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />





    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email Id"
        android:maxLength="30"
        android:id="@+id/editText18"
        android:singleLine="true"
        android:textSize="15sp"
        android:layout_below="@+id/editText17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:hint="Mobile Number"
        android:digits="1234567890+-"
        android:singleLine="true"
        android:maxLength="15"
        android:textSize="15sp"
        android:layout_below="@+id/editText18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editText51"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:hint="Height"
        android:digits="1234567890+-."
        android:singleLine="true"
        android:maxLength="15"
        android:textSize="15sp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editText52"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:hint="Weight"
        android:digits="1234567890+-."
        android:singleLine="true"
        android:maxLength="15"
        android:textSize="15sp"
        android:layout_below="@+id/editText51"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />









    <!--Button
        android:id="@+id/button143"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign"
        android:layout_below="@+id/editText5"
        /-->


    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Are you a coach?"
        android:textSize="17sp"

        android:layout_below="@+id/editText52"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonGroup1"

        android:layout_below="@+id/editText52"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/radioButton1"
            android:textSize="14sp"
            android:checked="false"
            android:ems="10"
            android:layout_below="@+id/editText52"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/imageButton13"
            android:layout_toStartOf="@+id/imageButton13" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:ems="10"
            android:id="@+id/radioButton21"
            android:textSize="14sp"
            android:checked="false"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/radioButtonGroup1"
        android:text="Submit" />


</RelativeLayout>
</ScrollView>







