<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/ll">
        <TextView
            android:id="@+id/t1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text=""

            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/t2"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:text="NAMES"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="50dp"
            android:text="WEIGHT LOST"
            android:layout_gravity="center"
            android:gravity="left"/>
        <TextView
            android:id="@+id/t4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="BONUS"

            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/ll1">
        <ImageView
            android:id="@+id/a1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="TextView"
            android:src="@drawable/gold"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/a2"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/switch1"
            android:layout_width="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="left"/>
        <TextView
            android:id="@+id/a3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="500 PTS"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/ll2">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="TextView"
            android:src="@drawable/silver"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/b2"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/switch2"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="left"/>
        <TextView
            android:id="@+id/b3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="300 PTS"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/c1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="TextView"
            android:src="@drawable/bronze"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/c2"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_width="160dp"
            android:layout_height="50dp"
            />
        <TextView
            android:id="@+id/switch3"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="left"/>
        <TextView
            android:id="@+id/c3"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="200 PTS"
            android:textStyle="bold"
            android:textSize="20sp"/>


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/d1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="TextView"
            android:src="@drawable/proicon1"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/d2"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/switch4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="left"/>
        <TextView
            android:id="@+id/d3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="100 PTS"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/e1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="TextView"
            android:src="@drawable/proicon2"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/e2"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/switch5"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"

            android:gravity="left"/>
        <TextView
            android:id="@+id/e3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="90 PTS"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/f1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="TextView"
            android:src="@drawable/proicon2"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/f2"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/switch6"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="left"/>
        <TextView
            android:id="@+id/f3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="80 PTS"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
           />


    </LinearLayout>

</LinearLayout>